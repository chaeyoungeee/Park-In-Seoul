<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".fragments.WeatherFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/black_button"
                        android:fontFamily="@font/prtendardsb"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:text="🔥기온/체감온도"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/currentTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:fontFamily="@font/prtendardsb"
                            android:text="좋음"
                            android:textColor="@color/white"
                            android:textSize="18dp" />


                        <TextView
                            android:id="@+id/sensibleTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:fontFamily="@font/prtendardsb"
                            android:text="(1㎍/㎡)"
                            android:textColor="@color/white"
                            android:textSize="18dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/black_button"
                        android:fontFamily="@font/prtendardsb"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:text="🧐 최저/최고기온"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/minTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:fontFamily="@font/prtendardsb"
                            android:text="좋음"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/maxTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:fontFamily="@font/prtendardsb"
                            android:text="(1㎍/㎡)"
                            android:textColor="@color/white"
                            android:textSize="18dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_button"
                    android:fontFamily="@font/prtendardsb"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:text="☔️ 강수 정보"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/precptMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/prtendardsb"
                    android:text="13℃"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line_box"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/DT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:height="50dp"
                            android:fontFamily="@font/prtendardsb"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:text="시간"
                            android:textColor="@color/white"
                            android:textSize="18dp"></TextView>

                        <TextView
                            android:id="@+id/skyStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:height="50dp"
                            android:fontFamily="@font/tossface"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:text="날씨️"
                            android:textColor="@color/white"
                            android:textSize="18dp"></TextView>

                        <TextView
                            android:id="@+id/temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:height="50dp"
                            android:fontFamily="@font/prtendardsb"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:text="기온"
                            android:textColor="@color/white"
                            android:textSize="18dp"></TextView>

                        <TextView
                            android:id="@+id/preciptation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:height="50dp"
                            android:fontFamily="@font/prtendardsb"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:text="강수량"
                            android:textColor="@color/white"
                            android:textSize="18dp"></TextView>

                        <TextView
                            android:id="@+id/preceptType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:height="50dp"
                            android:fontFamily="@font/prtendardsb"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:text="강수형태"
                            android:textColor="@color/white"
                            android:textSize="18dp"></TextView>

                        <TextView
                            android:id="@+id/rainChance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:height="50dp"
                            android:fontFamily="@font/prtendardsb"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:text="강수확률"
                            android:textColor="@color/white"
                            android:textSize="18dp"></TextView>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbarStyle="outsideOverlay"
                        android:scrollbarThumbVertical="@drawable/scrollbar"
                        android:scrollbars="vertical"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>